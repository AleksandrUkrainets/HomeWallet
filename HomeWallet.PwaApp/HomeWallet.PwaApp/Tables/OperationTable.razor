@if (Operations.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Amount</th>
                <th scope="col">Date</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">OperationType</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var operation in Operations)
            {
                <tr>
                    <td class="align-middle">
                        @operation.Id
                    </td>
                    <td class="align-middle">
                        @operation.Amount
                    </td>
                    <td class="align-middle">
                        @operation.Date
                    </td>
                    <td class="align-middle">
                        @operation.Category.Name
                    </td>
                    <td class="align-middle">
                        @operation.Category.Description
                    </td>
                    <td class="align-middle">
                        @((Models.CategoryTypePwa)operation.Category.CategoryType)
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-info" @onclick="() => RedirectToUpdate(operation.Id)">Update</button>
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-danger" @onclick="() => Delete(operation.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>
        There are not data.
    </span>
}